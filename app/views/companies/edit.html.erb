<div class="card mb-3">
    <div class="card-body">
        <%= form_with model: @company, local: true, url: company_path, method: :put do |f| %>

        <div class="field">
            <% if @company.logo.attached? %>
                <%= image_tag @company.logo_thumbnail, class: "img-thumbnail company-logo-profile m-2" %>
            <% else %>
                <%= embedded_svg("company-logo", class: "img-thumbnail company-logo-profile m-2", alt: "job_seeker-logo") %>
            <% end %>
        </div>
        <div class="field">
            <%= f.file_field :logo %>
            <%#= f.button%>
        </div>

        <div class="mb-3">
            <%= f.label :name, t('.name'), class: "form-label" %>
            <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="mb-3">
            <%= f.label :about_company, t('.about_company'), class: "form-label" %>
            <%= f.text_area :about_company, class: "form-control" %>
        </div>
        <div class="mb-3">
            <%= f.label :website, t('.website'), class: "form-label" %>
            <%= f.text_field :website, class: "form-control" %>
        </div>
        <div class="mb-3">
            <%= f.label :email, t('.email'), class: "form-label" %>
            <%= f.email_field :email, class: "form-control" %>
        </div>

            <%= f.submit t('.enter'), class: "btn btn-primary", data: {turbo: "false"} %>
        <% end %>
    </div>
</div>
