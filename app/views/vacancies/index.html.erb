<div class="row">
    <div class="col-lg-1 col-md-1 ml-auto mr-auto">

    </div>
    <div class="col-lg-7 col-md-6 ml-auto mr-auto">
        <div class="card mb-5">
            <div class="card-header">
                <h1 class="mb-0"><%= t('.vacancies') %></h1>
            </div>
            <% if is_company? %>
            <div class="card-body">
                <%= link_to t('.add_new_vacancy'), new_vacancy_path, class: "btn btn-primary btn-large" %>
            </div>
            <% end %>
        </div>
            <%= form_with(
              url: vacancies_path,
              method: :get,
              data: {
                controller: "submit-form",
                submit_form_target: "form",
                turbo_frame: :index
              }
            ) do |f| %>
              <%= f.text_field(
                :query,
                autofocus: true,
                autocomplete: "off",
                value: @query,
                placeholder: "Search",
                class: "form-control me-2",
                type: "search",
                data: {
                  action: "input->submit-form#submit"
                }
              ) %>
            <% end %>
            <br/>
        <section id="vacancys">
            <%= render @vacancies %>
        </section>
            </div>

    <div class="col-lg-4 col-md-4 ml-auto mr-auto">
    </div>
</div>

<script type="text/javascript">
    function addEvent(elem, event, fn){
      if(elem.addEventListener){
        elem.addEventListener(event, fn, false);
      }else{
        elem.attachEvent("on" + event,
        function(){ return(fn.call(elem, window.event)); });
    }}

    var element = document.getElementById('query');

    addEvent(element,'focus',function(){
      var that = this;
      setTimeout(function(){ that.selectionStart = that.selectionEnd = 10000; }, 0);
    });
</script>
