<div class="card mb-3">
    <div class="card-header">
        <h3 class="mb-0"><%= @vacancy.job_title %></h3>
    </div>
    <div class="card-body">

        <div class="field">
            <% if @vacancy.logo.attached? %>
                <%= image_tag @vacancy.logo_thumbnail, class: "img-thumbnail company-logo-profile m-2" %>
            <% else %>
                <%= image_tag "employer-default.png", width: 250, class: "vacancy-image img-thumbnail m-2", alt: "vacancy-default-logo" %>
            <% end %>
        </div>

        <p><%= t('.company_name')%>: <%= @vacancy.company_name %></p>
        <p><%= t('.country')%>: <%= @vacancy.country %></p>
        <p><%= t('.location')%>: <%= @vacancy.location %></p>
        <p><%= t('.remote')%>: <%= @vacancy.remote %></p>
        <p><%= t('.type_of_job')%>: <%= @vacancy.type_of_job %></p>
        <p><%= t('.salary')%>: <%= @vacancy.salary %></p>
        <p><%= t('.description')%>: <%= @vacancy.description %></p>
        <hr/>
        <p>
          <%= t('.skills')%>:
          <% @vacancy.skills.each do |skill| %>
            <%= link_to skill.name, vacancies_skill_path(id: skill) %>
          <% end %>
        </p>
        <%= link_to t('.edit_vacancy'), edit_vacancy_path, class: "btn btn-primary" %>
    </div>
</div>
</div>

