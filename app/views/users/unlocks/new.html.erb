<%= render "users/shared/error_messages", resource: resource %>
<div class="form-devise text-center">
  <h1 class="h3 mb-3 fw-normal"><%= t('.title') %></h1>

  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>


    <div class="form-floating">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: t('.enter_email') %>
      <%= f.label :email, t('.enter_email') %>
    </div>

    <div class="actions">
      <%= f.submit t('.resend_unlock_instructions'), class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
