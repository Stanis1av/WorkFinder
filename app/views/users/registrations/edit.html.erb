<%= render "users/shared/error_messages", resource: resource %>

<div class="form-devise text-center">
  <h1 class="h3 mb-3 fw-normal">Edit <%= resource_name.to_s.humanize %></h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

    <div class="form-floating">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control first", placeholder: "Enter email" %>
      <%= f.label :email, "Enter email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-floating">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control middle", placeholder: "Enter a new password" %>
      <%= f.label :password, "Enter a new password" %><!-- <i>(leave blank if you don't want to change it)</i> -->
    </div>

    <div class="form-floating">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control middle", placeholder: "Enter a new password" %>
    <%= f.label :password_confirmation, "Enter a new password" %>
    </div>

    <div class="form-floating">
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control last", placeholder: "Current password" %>
      <%= f.label :current_password, "Current password" %><!-- <i>(we need your current password to confirm your changes)</i> -->
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "btn-lg btn btn-success" %>    <%= link_to "Back", :back,  class: "btn btn-primary" %>
    </div>
  <% end %>

  <br/>
  <h4 class="fw-normal">Cancel my account</h4>

  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
</div>
