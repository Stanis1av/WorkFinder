<%= render "users/shared/error_messages", resource: resource %>

<div class="form-devise text-center">
  <h1 class="h3 mb-3 fw-normal"><%= t('.title') %></h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="form-floating">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control first", placeholder: t('.enter_email') %>
    <%= f.label :email, t('.enter_email') %>
  </div>

  <div class="form-floating">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control middle", placeholder: t('.enter_password') %>
    <%= f.label :password, t('.enter_password') %>
  </div>
  <div class="form-floating">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control last", placeholder: t('.confirm_password')  %>
    <%= f.label :password_confirmation, t('.confirm_password') %>
  </div>

  <div class="input-group radio-button-role">
    <div class="input-group-text">
      <%= f.radio_button :role, 'job_seeker', class: "form-check-input mt-0" %>
    </div>
  <%= f.label :role, "Соискатель", class: "form-control text-start" %>
  </div>
  <div class="input-group radio-button-role">
    <div class="input-group-text">
      <%= f.radio_button :role, 'employer', class: "form-check-input mt-0" %>
    </div>
  <%= f.label :role, "Работодатель", class: "form-control text-start" %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit t('.sign_up'), class: "w-100 btn btn-lg btn-primary", data: {turbo: "false"} %>
  </div>
  <br/>

  <% end %>

  <%= render "users/shared/links" %>
</div>

