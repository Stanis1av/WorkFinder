<%= render "users/shared/error_messages", resource: resource %>

<div class="form-devise text-center">
  <h1 class="h3 mb-3 fw-normal">Sign up</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="form-floating">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control first", placeholder: "Enter email" %>
    <%= f.label :email, "Enter email" %>
  </div>

  <div class="form-floating">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control middle", placeholder: "Password" %>
    <%= f.label :password, "Password" %>
  </div>
  <div class="form-floating">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control last", placeholder: "Confirm the password" %>
    <%= f.label :password_confirmation, "Confirm the password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "w-100 btn btn-lg btn-primary" %>
  </div>

  <% end %>

  <%= render "devise/shared/links" %>
</div>

