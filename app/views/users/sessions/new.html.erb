<div class="form-devise text-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <h1 class="h3 mb-3 fw-normal"><%= t('.title') %></h1>

    <div class="form-floating">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control first", placeholder: t('.enter_email') %>
      <%= f.label :email, t('.enter_email') %>
    </div>

    <div class="form-floating">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control last", placeholder: t('.enter_password') %>
      <%= f.label :password, t('.enter_password') %>
    </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <div class="form-check">
            <label>
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, t('.remember_me') %>
          </label>
          </div>
        </div>
      <% end %>
    <div class="actions">
      <%= f.submit t('.sign_in'), class: "w-100 btn btn-lg btn-primary", data: {turbo: "false"} %>
    </div>
    <br/>

  <% end %>

  <%= render "users/shared/links" %>

</div>
