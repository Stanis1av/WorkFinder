<table border="0" cellpadding="0" cellspacing="0" class="body">
      <tr>
        <td>&nbsp;</td>
        <td class="container">
          <div class="content">

            <!-- START CENTERED WHITE CONTAINER -->
            <span class="preheader">Confirm your email address on FindWorker.</span>
            <table class="main">

              <!-- START MAIN CONTENT AREA -->
              <tr>
                <td class="wrapper">
                  <table border="0" cellpadding="0" cellspacing="0">
                    <tr>
                      <td>
                        <p>Hello <%= @to_email %>.</p>
                        <p>Thanks for joining FindWorker.</p><br/>

                        <p>We want to verify your email address. To confirm your email address and complete your registration, click the button below.<p>

                        <table border="0" cellpadding="0" cellspacing="0" class="btn btn-primary">
                          <tbody>
                            <tr>
                              <td align="left">
                                <table border="0" cellpadding="0" cellspacing="0">
                                  <tbody>
                                    <tr>
                                      <td><%= link_to 'Confirm your account', confirmation_url(@user, confirmation_token: @token) %></td>
                                    </tr>
                                  </tbody>
                                </table>
                              </td>
                            </tr>
                          </tbody>
                        </table>
                        <p>If it's not you, then just ignore this letter.</p>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>

            <!-- END MAIN CONTENT AREA -->
            </table>



          <!-- END CENTERED WHITE CONTAINER -->
          </div>
        </td>
        <!-- <td>&nbsp;</td> -->
      </tr>
    </table>
