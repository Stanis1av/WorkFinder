<div class="row">
    <div class="col-lg-3 col-md-3"></div>
    <div class="col align-self-center col-lg-6 col-md-6">
<div class="card mb-3">
    <div class="card-body">
        <%= link_to t('.add_new_vacancy'), new_vacancy_path, class: "btn btn-primary btn-large" %>
    </div>
</div>
<div class="card mb-3">
    <div class="card-body">
        <div class="row">
            <div class="col-lg-4 col-md-5">

            <% if @employer.logo.attached? %>
                <%= image_tag @employer.logo_thumbnail, class: "img-thumbnail company-logo-profile m-2" %>
            <% else %>
                <%= image_tag "logos/employer-default.svg", width: 200, class: "img-thumbnail avatar-user-profile m-2", alt: "employer-default" %>
            <% end %>

            </div>
            <div class="col-lg-8 col-md-7">
               <h4><%= @employer.name %></h4>

                <p><%= t('.name') %>: <%= @employer.name %></p>
                <p><%= t('.about_employer') %>: <%= @employer.about_employer %></p>
                <p><%= t('.website') %>: <%= @employer.website %></p>
                <p><%= t('.email') %>: <%= @employer.email %></p>

                <%= link_to t('.edit_details'), edit_employer_path, class: "btn btn-primary", data: {turbo: "false"} %>
            </div>
        </div>



    </div>
</div>

</div>
<div class="col-lg-3 col-md-3"></div>
</div>
