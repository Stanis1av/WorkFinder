<%= form_with model: @vacancy, url: wizard_path, method: :patch do |f| %>
  <% if f.object.errors.any? %>
    <div class="error_messages">
      <% f.object.errors.full_messages.each do |error| %>
        <p><%= error %></p>
      <% end %>
    </div>
  <% end %>

  <fieldset>
    <legend>Установите настройки связи</legend>

      <div class="mb-3">
          <%= f.label :first_name, "Имя", class: "form-label fw-bolder" %>
          <%= f.text_field :first_name, class: "form-control" %>
      </div>
      <div class="mb-3">
          <%= f.label :last_name, "Фамилия", class: "form-label fw-bolder" %>
          <%= f.text_field :last_name, class: "form-control" %>
      </div>
      <div class="mb-3">
          <%= f.label :phone, "Номер телефона", class: "form-label fw-bolder" %>
          <%= f.text_field :phone, class: "form-control" %>
      </div>
      <div class="mb-3">
          <%= f.label :email, "Адрес электронной почты", class: "form-label fw-bolder" %>
          <%= f.text_field :email, value: @employer.email, class: "form-control" %>
      </div>

    <br/>

    <div>
      <%= link_to 'На предыдущий шаг', previous_wizard_path, class: "btn" %>
      <%= f.submit 'Содать резюме', class: "btn btn-primary" %>
    </div>
  </fieldset>
<% end %>
