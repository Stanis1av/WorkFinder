<%= form_with model: @vacancy, url: wizard_path, method: :patch do |f| %>
  <% if f.object.errors.any? %>
    <div class="error_messages">
      <% f.object.errors.full_messages.each do |error| %>
        <p><%= error %></p>
      <% end %>
    </div>
  <% end %>

  <fieldset>
    <legend>Добавьте  компенсацию</legend>

    <p class="fw-bolder">Укажите оплату</p>
    <div class="row row-cols-lg-auto">
      <div class="mb-3 col-lg-3">
          <%= f.label :from, "От", class: "form-label fw-normal" %>
          <%= f.text_field :from, class: "form-control" %>
      </div>
      <div class="mb-3 col-lg-3">
          <%= f.label :to, "До", class: "form-label fw-normal" %>
          <%= f.text_field :to, class: "form-control" %>
      </div>
      <div class="mb-3 col-lg-2">
        <%= f.label :currency, "Валюта", class: "form-label fw-normal" %>
        <%= f.select(:currency, [[t('.rub'), 'rub'], [t('.usd'), 'usd'], [t('.eur'), 'eur']], {}, class: "form-control") %>
      </div>
      <div class="mb-3 col-lg-2">
          <%= f.label :rate, "Ставка", class: "form-label fw-normal" %>
          <%= f.select(:rate, [[t('.hour'), 'hour'], [t('.day'), 'day'], [t('.week'), 'week'], [t('.month'), 'month'], [t('.year'), 'year']], {}, class: "form-control") %>
      </div>
    </div>

    <br/>

    <div>
      <%= link_to 'На предыдущий шаг', previous_wizard_path, class: "btn" %>
      <%= f.submit 'Следующий шаг', class: "btn btn-primary" %>
    </div>
  </fieldset>
<% end %>
