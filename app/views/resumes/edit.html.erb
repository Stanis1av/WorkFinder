<div class="row">
    <div class="col-md-8 mb-3">
        <div class="card">
            <div class="card-header">
                <h1 class="mb-0"><%= t('.edit_resume') %></h1>
            </div>
            <div class="card-body">
                <%#= form_with model: @resume, local: true do |f| %>
                <%#= form_with model: @resume, local: true, url: resume_path(@resume), method: :put do |form|  do |f| %>
                <%= form_with model: @resume, local: true, url: resume_path, method: :put do |f| %>
                <% if @resume.errors.full_messages.any? %>
                  <% @resume.errors.full_messages.each do |error_message| %>
                    <%= error_message if @resume.errors.full_messages.first == error_message %> <br />
                  <% end %>
                <% end %>

                <%#= render "shared/validation-messages", object: f.object %>
                <!-- About me -->
                <div class="form-group">
                    <%= f.label :first_name, t('.first_name') %>
                    <%= f.text_field :first_name, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :last_name, t('.last_name') %>
                    <%= f.text_field :last_name, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :phone_number, t('.phone_number') %>
                    <%= f.text_field :phone_number, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :headline, t('.headline') %>
                    <%= f.text_field :headline, class: "form-control" %>
                </div>

                <!-- Location -->
                <div class="form-group">
                    <%= f.label :country_of_residence, t('.country_of_residence') %>
                    <%= f.text_field :country_of_residence, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :street_address_residence, t('.street_address_residence') %>
                    <%= f.text_field :street_address_residence, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :city_or_state_of_residence, t('.city_or_state_of_residence') %>
                    <%= f.text_field :city_or_state_of_residence, class: "form-control" %>
                </div>

                <%= t('.relocation') %><br/>
                <div class="input-group mb-3">

                    <div class="input-group-text">
                        <%= f.check_box :relocation, value: true, class: "form-check-input mt-0" %>
                    </div>
                    <%= f.label :relocation, t('.i_am_willing_to_relocate'), class: "form-control text-start" %>
                </div>

                <div class="form-group">
                    <%= f.label :job_title, t('.job_title') %>
                    <%= f.text_field :job_title, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :company, t('.company') %>
                    <%= f.text_field :company, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :country_of_work, t('.country_of_work') %>
                    <%= f.text_field :country_of_work, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :city_or_state_of_work, t('.city_or_state_of_work') %>
                    <%= f.text_field :city_or_state_of_work, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :time_period, t('.time_period') %>
                    <%= f.text_field :time_period, class: "form-control" %>
                </div>
                <hr/>
                <!-- Skills -->
                <div class="form-group">
                  <%= f.label :skill_list, t('.skills') %><br />
                  <%= f.text_field :skill_list, class: "form-control", value: resume_skill_list %>
                </div>
                <br/>
                <div class="btn-group">
                    <%= f.submit t('.edit'), class: "btn btn-success" %>
                </div>
                <% end %>
        </div>
    </div>
