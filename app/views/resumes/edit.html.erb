<div class="row">
    <div class="col-md-8 mb-3">
        <h2 class="mb-0"><%= t('.edit_resume') %></h2>
        <div class="card">

            <%#= form_with model: @resume, local: true do |f| %>
            <%#= form_with model: @resume, local: true, url: resume_path(@resume), method: :put do |form|  do |f| %>
            <%= form_with model: @resume, local: true, url: resume_path, method: :put do |f| %>

            <% if @resume.errors.full_messages.any? %>
              <% @resume.errors.full_messages.each do |error_message| %>
                <%= error_message if @resume.errors.full_messages.first == error_message %> <br />
              <% end %>
            <% end %>

            <div class="card-header">
                <div class="form-group">
                <%= f.label :headline, t('.first_name'), class: "form-label" %>
                <%= f.text_field :headline, class: "form-control" %>
                </div>
            </div>
            <div class="card-body">

            <%#= render "shared/validation-messages", object: f.object %>
            <!-- About me -->


            <div class="field m-2">
                <% if @resume.avatar.attached? %>
                    <%#= image_tag(@job_seeker.avatar_thumbnail) %>
                    <%= image_tag @resume.avatar_thumbnail, class: "img-thumbnail avatar-user-profile m-2" %>
                <% else %>
                    <%= embedded_svg("profile-logo", class: "img-thumbnail avatar-user-profile m-2", alt: "job_seeker-logo") %>
                <% end %>
            </div>
            <div class="field">
                <%= f.file_field :avatar %>
                <%#= f.button%>
            </div>

            <div class="form-group">
                <%= f.label :first_name, t('.first_name') %>
                <%= f.text_field :first_name, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :last_name, t('.last_name') %>
                <%= f.text_field :last_name, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :phone_number, t('.phone_number') %>
                <%= f.text_field :phone_number, class: "form-control" %>
            </div>
            <!-- Location -->
            <div class="form-group">
                <%= f.label :country_of_residence, t('.country_of_residence'), class: "form-label" %>
                <%= f.text_field :country_of_residence, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :city_or_state_of_residence, t('.city_or_state_of_residence'), class: "form-label" %>
                <%= f.text_field :city_or_state_of_residence, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :street_address_residence, t('.street_address_residence'), class: "form-label" %>
                <%= f.text_field :street_address_residence, class: "form-control" %>
            </div>
            <div class="form-check">
                <%= f.check_box :relocation, { class: "form-check-input" }  %>
                <%= f.label :relocation, "Я готов к переезду", class: "form-check-label" %>
            </div>
            <!-- Skills -->
            <div class="form-group">
              <%= f.label :skill_list, t('.skills') %><br />
              <%= f.text_field :skill_list, class: "form-control", value: resume_skill_list %>
            </div>
            <br/>
            <div class="btn-group">
                <%= f.submit t('.edit'), class: "btn btn-success" %>
            </div>
            <% end %>
        </div>
    </div>
