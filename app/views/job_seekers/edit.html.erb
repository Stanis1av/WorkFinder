<div class="card mb-3">
    <div class="card-body">
        <%#= form_with model: @job_seeker, local: true, url: job_seeker_path, method: :put do |f| %>
        <%= simple_form_for(@job_seeker, method: :put, url: job_seeker_path) do |f| %>

        <div class="image-upload" data-controller="photo-preview">
            <% if @job_seeker.avatar.attached? %>
                <%= image_tag @job_seeker.avatar, width: 200, class: "img-thumbnail avatar-user-profile m-2", id: "photo-preview", data: { photo_preview_target: "photoPreview" } %>
            <% else %>
                <%= image_tag "jobseeker-default.png", width: 200, class: "img-thumbnail avatar-user-profile m-2", id: "photo-preview", data: { photo_preview_target: "photoPreview" } %>
            <% end %>

            <%= f.input :avatar,
                        input_html: { class: 'd-none', data: { action: "click->photo-preview#photo_input", photo_preview_target: "photoInput" } },
                        label_html: { class: 'btn btn-outline-primary' },
                        label: t('.upload-photo'),
                        hint: t('.upload-photo-later') %>
        </div>

        <div class="mb-3">
            <%= f.label :first_name, t('.first_name'), class: "form-label" %>
            <%= f.text_field :first_name, class: "form-control" %>
        </div>
        <div class="mb-3">
            <%= f.label :last_name, t('.last_name'), class: "form-label" %>
            <%= f.text_field :last_name, class: "form-control" %>
        </div>
        <div class="mb-3">
            <%= f.label :age, t('.age'), class: "form-label" %>
            <%= f.text_field :age, class: "form-control" %>
        </div>
        <div class="mb-3">
            <%= f.label :email, t('.email'), class: "form-label" %>
            <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mb-3">
            <%= f.label :phone_number, t('.phone_number'), class: "form-label" %>
            <%= f.text_field :phone_number, class: "form-control" %>
        </div>

        <%= f.fields_for :location do |l| %>
            <div class="mb-3">
                <%= l.label :country_of_residence, t('.country_of_residence'), class: "form-label" %>
                <%= l.text_field :country_of_residence, class: "form-control" %>
            </div>
            <div class="mb-3">
                <%= l.label :city_or_state_of_residence, t('.city_or_state_of_residence'), class: "form-label" %>
                <%= l.text_field :city_or_state_of_residence , class: "form-control" %>
            <div/>

        <% end %>
            <br/>
            <%= f.submit t('.enter'), class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
