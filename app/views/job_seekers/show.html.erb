<div class="card mb-3">
    <div class="card-body">
        <%= link_to t('.add_new_resume'), new_resume_path, class: "btn btn-primary btn-large" %>
    </div>
</div>
<div class="card mb-3">
    <div class="card-body">

        <% if @job_seeker.avatar.attached? %>
            <%= image_tag @job_seeker.avatar_thumbnail, class: "img-thumbnail avatar-user-profile m-2" %>
        <% else %>
            <%= embedded_svg("profile-logo", class: "img-thumbnail avatar-user-profile m-2", alt: "job_seeker-logo") %>
        <% end %>

        <p><%= t('.first_name') %>: <%= @job_seeker.first_name %></p>
        <p><%= t('.last_name') %>: <%= @job_seeker.last_name %></p>
        <p><%= t('.email') %>: <%= @job_seeker.email %></p>
        <p><%= t('.phone_number') %>: <%= @job_seeker.phone_number %></p>
        <hr/>
        <p><%= t('.country_of_residence') %>: <%= @job_seeker.location.country_of_residence %></p>
        <p><%= t('.city_or_state_of_residence') %>: <%= @job_seeker.location.city_or_state_of_residence %></p>
        <p><%= t('.street_address_residence') %>: <%= @job_seeker.location.street_address_residence %></p>
        <p><%= t('.relocation') %>: <%= @job_seeker.location.relocation %></p>

        <%= link_to t('.edit_details'), edit_job_seeker_path, class: "btn btn-primary" %>
    </div>
</div>
